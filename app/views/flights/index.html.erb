<h1> Flights </h1>

<% @flights.each do |flight| %>
  <div id="flight-<%= flight.id %>">

  <h2><%= flight.number %> </h2><br>
  <%= flight.airline.name %> Airline <br><br>
    Flight Passengers: <br>
    <% flight.passengers.each do |passenger| %>
    <%= passenger.name %> <br>
    <%= link_to "Remove #{passenger.name}", passenger_flight_path(passenger.id, flight: flight.id), method: :delete %>
  <% end %>
  </div>
  <br><br>
<% end %>
  